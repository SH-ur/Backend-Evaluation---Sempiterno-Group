generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String 
  email String @unique
  rol UserRol @default(CLIENT)
  password String
  deletedAt DateTime?
  services Service[]
  createdAt DateTime @default(now())
}

model Service{
  id String @id @default(uuid())
  name String
  price Int
  duration Int
  date_available DateTime
  deletedAt DateTime?
  user User @relation(fields: [userId], references: [id])
  userId String
}

enum UserRol{
  CLIENT
  ADMIN
}
